<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--android:background="#f6f6f6"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80">

        <ImageView
            android:id="@+id/backtitle"
            android:layout_width="@dimen/px30"
            android:layout_height="@dimen/px30"
            android:layout_marginTop="@dimen/px25"
            android:layout_marginLeft="@dimen/px30"
            android:background="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/titlecontent"
            android:layout_width="@dimen/px500"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px100"
            android:textColor="#888888"
            android:text="关于"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:maxLines="2"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>


    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/px200"
        android:layout_height="@dimen/px200"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@mipmap/icon"
        />


    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="当前版本  V1.0.0 "
        android:textColor="@color/colorSubtitle"
        android:textSize="13sp" />


    <LinearLayout
        android:id="@+id/upgradelin"
        android:layout_marginTop="@dimen/px80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorSubtitle"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center_vertical"
            android:text="检查更新"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
    </LinearLayout>



</LinearLayout>