<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qmuilinearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/found_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/bar_layout"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/bar_layout"
        android:layout_above="@+id/refresh_ct_did"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <org.elastos.wallet.ela.utils.widget.RoundImageView
                    android:id="@+id/head_ic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_ela" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/head_ic"
                    android:text="Kevin Zhang"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/head_ic"
                    android:text="布宜诺斯艾利斯"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/secretary_did_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="秘书长DID"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/secretary_did"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="xxxxfsfsfsfwefsfsdfsdfsdfsfsfsdfsdfdsfsfsd"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/job_time_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="在职时间"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="2020.3.15 12:45:23 -"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="2019.12.6 11:27:19 - 2020.1.12 2:12:14"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/birth_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="出生日期"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/birth_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="zhangfeng@elasot.org"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/personal_homepage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="个人主页"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/personal_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="http://zcool-zhangfeng.com"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/wechat_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="微信帐号"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/wechat_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="zhangeng_1965"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/blog_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="微博帐号"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/blog_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="billgates_@microsoft"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/personal_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="个人简介"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/personal_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="这是一串个人简介，这是一串个人简介，这是一串个人简介"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/refresh_ct_did"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="#2d454e"
        android:gravity="center"
        android:text="更新DID信息"
        android:textSize="16sp" />

</RelativeLayout>